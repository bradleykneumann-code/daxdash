# Dax Learning App Environment Variables
# Copy this file to .env and update the values

# Server Configuration
NODE_ENV=development
PORT=5000
CLIENT_URL=http://localhost:3000

# Database Configuration
MONGODB_URI=mongodb://localhost:27017/dax-learning

# JWT Configuration
JWT_SECRET=your-super-secret-jwt-key-change-in-production-with-64-chars-minimum
JWT_EXPIRES_IN=7d

# Email Configuration (for password reset, etc.)
EMAIL_FROM=noreply@daxlearning.com
EMAIL_SERVICE=gmail
EMAIL_USERNAME=your-email@gmail.com
EMAIL_PASSWORD=your-app-password

# OpenAI Configuration (for DaxBot AI features)
OPENAI_API_KEY=your-openai-api-key-here
OPENAI_MODEL=gpt-3.5-turbo

# File Upload Configuration
MAX_FILE_SIZE=5242880
UPLOAD_PATH=./uploads

# Redis Configuration (for session storage in production)
REDIS_URL=redis://localhost:6379

# Production Security
CORS_ORIGIN=http://localhost:3000
SESSION_SECRET=your-session-secret-for-production

# Logging
LOG_LEVEL=info
LOG_FILE=./logs/app.log

# Health Check
HEALTH_CHECK_ENDPOINT=/api/health